<?xml version="1.0" encoding="UTF-8" ?>

<configuration>

  <appender name="FILE" class = "ch.qos.logback.core.FileAppender">
   <File>/logs/Application.log</File>
    <encoder>
       <pattern>
            [%d{yyyy-MM-dd HH:mm:ss.sss}] [%C] [%-5p] %m%n
       </pattern>
    </encoder>
  </appender>

    <root level="INFO" class ="com.springbatch.uploader">
        <appender-ref ref="FILE"/>
    </root>

</configuration>